@model List<MovieDB>
@{
}

<form asp-method="post" asp-action="MovieNight">
    <h3>Enter the first Movie you are interseted in viewing:</h3>
    <input type="text" name="Title1" />
    <h3>Enter the second Movie you are interseted in viewing:</h3>
    <input type="text" name="Title2" />
    <h3>Enter the third Movie you are interseted in viewing:</h3>
    <input type="text" name="Title3" />

    <input type="submit" />
</form>


@{
    if (Model != null)
    {
        List<MovieDB> result = Model;
        foreach (MovieDB c in result)
        {
        <img src="@c.Poster" />
        <h1>@c.Title</h1>
        <p>@c.Genre</p>
        <p>@c.Released</p>
        <p>@c.Runtime</p>
        <p>@c.Actors</p>
        <p>@c.Plot</p>
        <p>@c.Awards</p>
            }
        }
    }
